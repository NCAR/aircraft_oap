#!python

import os
import eol_scons

env = Environment(tools = ['default', 'openmotif'], ENV= os.environ)

try: env['JLOCAL'] = os.environ['JLOCAL']
except KeyError:
    env.Append(CPPPATH=['#/raf'])
    env.Append(LIBPATH=['#/raf'])
else:
    env.Append(CPPPATH=['$JLOCAL/include'])
    env.Append(LIBPATH=['$JLOCAL/lib'])

env.Append(CPPPATH=['#/class'])

env.Append(CCFLAGS=['-Wall'])
env.Append(CCFLAGS=['-Wno-write-strings'])
env.Append(CCFLAGS=['-Wstrict-aliasing'])

env.Append(CPPDEFINES=['-DPNG'])
if env['PLATFORM'] == 'darwin':
  env.Append(CPPDEFINES=['-DPNG15'])


env.Append(LIBS=['raf'])
env.Append(LIBS=['png'])
env.Append(LIBS=['z'])

Export('env')

SConscript('raf/SConscript')

sources = Split("""
class/CanvasWindow.cc
class/Colors.cc
class/ControlWindow.cc
class/DataFile.cc
class/Enchilada.cc
class/FileMgr.cc
class/Hex.cc
class/Histogram.cc
class/Magnify.cc
class/MagnifyCanvas.cc
class/MagnifyWindow.cc
class/MainCanvas.cc
class/Probe.cc
src/cb_canvas.cc
src/cb_control.cc
src/cb_mag.cc
src/cb_menus.cc
src/cb_printer.cc
src/cb_text.cc
src/ccb.cc
src/global.cc
src/process.cc
src/xml.cc
src/xpms2d.cc
""")


env.Program(target = 'src/xpms2d', source = sources)

try: env['JLOCAL'] = os.environ['JLOCAL']
except KeyError:
  print('JLOCAL not defined.  No install location.')
else:
  env.Alias('install', env.Install([env['JLOCAL'] + '/bin'], 'src/xpms2d'))
